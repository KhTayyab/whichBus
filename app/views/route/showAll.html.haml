%h1 Showing All Routes
-if @routes.blank?
	%h3= "No routes to show"
%div
	=link_to 'Add new route', {:action => 'new'}
%div
	%table.table.table-hover.table-condensed.text-center
		%tr
			%th.text-center 
				Route Id
			%th.text-center
				Route Name
			%th.text-center
				Route Distance
			%th.text-center
				Route Travel Time
			%th.text-center
				Route Source LatLong
			%th.text-center
				Route Dest LatLong
			%th.text-center
				Route Start Time
			%th.text-center
				Route Stop Time
			%th.text-center 
				Delete
		-@routes.each do |r|
			%tr
				%td= r.id
				%td= link_to r.routeName, route_route_details_path(r.id)
				%td= r.routeDistance
				%td= r.routeTravelTime
				%td= r.routeSourceLatLong
				%td= r.routeDestLatLong
				%td= r.routeStartTime
				%td= r.routeStopTime
				%td
					= link_to route_view_path(r.id) do
						= content_tag :span, class: "glyphicon glyphicon-list" do
							=""
					|
					= link_to route_show_edit_route_path(r.id) do
						= content_tag :span, class: "glyphicon glyphicon-pencil" do
							=""
					|
					= link_to route_delete_path(r.id), method: :delete, data: { :confirm => 'Are you sure?' } do
						= content_tag :span, class: "glyphicon glyphicon-remove" do
							=""
