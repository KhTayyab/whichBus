=link_to "Show all routes", route_showAll_path, :class => "btn btn-primary"
=link_to "Edit This Route", {:action => 'editRoute', @route.id}, :class => "btn btn-default"
-if @busStops.blank?
	%h4 Route Empty
-else
	
	
	%h4= "Showing route details for: \'#{@route.routeName}\'"
	%table.table.table-hover.table-condensed.text-center
		%tr
			%th.text-center 
				Bus Stop Name
			%th.text-center
				Bus Stop Lat Long
			%th.text-center
				Bus Stop Sec Name
		-@busStops.each do |b|
			-if(b.nil?)
				%tr
					%td
						%p Empty Object
					%td
					%td
			-else
				%tr
					%td
						=link_to b.busStopName, busstop_view_path(b.id)
					%td
						=b.busStopLatLong
					%td
						=b.busStopSecName

 
