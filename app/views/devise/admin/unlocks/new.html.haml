%h2 Resend unlock instructions

=form_for(resource, :as => resource_name, :url => unlock_path(resource_name), :html => { :method => :post , :class => "form-horizontal"}) do |f|
	=devise_error_messages!

	%div.form-group
		=f.label :email
		%div.form-group
			=f.email_field :email, :autofocus => true
	%div.form-group
		%div.col-lg-offset-2.col-lg-10
			=f.submit :class => "btn btn-primary", :value => "Resend unlock instructions"
=render "devise/shared/links"
