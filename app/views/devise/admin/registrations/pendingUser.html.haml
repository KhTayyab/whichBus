- require 'active_support/core_ext'
%h1 Show All Users
-if @adminPendingUsers.blank?
	%h3= "No User Found."
-else
	%p 
		These are the Users
	%table.table.table-hover.table-condensed
		%tr
			%th 
				User Name
			%th 
				Email
			%td
				Name
			%td
				Last Sign in
			%td
				Approve User
		-@adminPendingUsers.each do |a|
			%tr
				%td= a.userName
				%td= a.email
				%td= "#{a.firstName} #{a.lastName}"
				%td= time_ago_in_words(a.last_sign_in_at, include_seconds: true)
				%td.text-center
					= link_to admin_approve_user_path(a.id), :method => :post do
						= content_tag :span, class: "glyphicon glyphicon-ok" do
							=""
