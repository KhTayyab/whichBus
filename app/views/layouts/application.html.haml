<!DOCTYPE html>
%html
	%head
		%title RailsBoot
		/%link{:href => 'http://fonts.googleapis.com/css?family=Stint+Ultra+Expanded',  :rel => 'stylesheet', :type => 'text/css'}
		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= csrf_meta_tags
	%body
		%div.container
			=link_to root_path do
				%button.btn.btn-primary
					Welcome to MIS-FYP
			= link_to "Manage Users", admin_index_path 
			|		
			= link_to "Manage Routes", route_showAll_path
			|
			= link_to "Manage Bus Stops", busstop_showAll_path
			%div.navbar-text.pull-right
				-if admin_signed_in?
					- user = current_admin
					%div.btn-group
						%button.btn.btn-default.dropdown-toggle{ :type => "button", :data => {:toggle => "dropdown"}}
							-if user.userName.blank?
								="#{user.firstName} #{user.lastName}"
							-else
								="#{user.userName}"
							%span.glyphicon.glyphicon-chevron-down
						%ul.dropdown-menu{role: "menu"}
							%li
								=link_to 'Edit Profile', edit_admin_registration_path
							%li.divider

							%li
								=link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'
							%li.divider
							%li
								=link_to "Cancel Account", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete
				-else
					= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'
					= link_to "Login", new_admin_session_path, :class => 'navbar-link'	
			
			/= link_to 'Manage Routes', {:controller => 'route', :action => 'showAll'}
			/= link_to 'Manage Bus Stops', {:controller => 'busstop', :action => 'showAll'}
			= yield
		
		
			/ Footer Implementation
			%div#real_footer
				%div.copyright
					%span Copyright Â© PakTransit.pk
