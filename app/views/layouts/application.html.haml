<!DOCTYPE html>
%html
	%head
		%title RailsBoot
		/%link{:href => 'http://fonts.googleapis.com/css?family=Stint+Ultra+Expanded',  :rel => 'stylesheet', :type => 'text/css'}
		= stylesheet_link_tag    "application", media: "all", "data-turbolinks-track" => true
		= javascript_include_tag "application", "data-turbolinks-track" => true
		= csrf_meta_tags
	%body
		=link_to root_path do
			%button.btn.btn-primary
				Welcome to MIS-FYP
		= link_to "Manage Users", admin_index_path 
		|		
		= link_to "Manage Routes", route_showAll_path
		|
		= link_to "Manage Bus Stops", busstop_showAll_path
		%div.navbar-text.pull-right
			%div.btn-group
				%button.btn.btn-danger{ :type => "button" } Action
				%button.btn.btn-danger.dropdown-toggle{ :type => "button", :data => {:toggle => "dropdown"}}
					%span.caret
				%ul.dropdown-menu{role: "menu"}
					%li
						%a{ :href => "#" }
							Action
					%li
						%a{ :href => "#" }
							Another action
					%li
						%a{ :href => "#" }
							Something else here
					%li.divider
		
					%li
						%a{ :href => "#" }
							Separated link
					

			-if admin_signed_in?
				- user = current_admin
				= "#{ user.userName}"
				Logged in as
				%strong
					= current_admin.email
				= link_to 'Edit profile', edit_admin_registration_path, :class => 'navbar-link'
				= link_to "Logout", destroy_admin_session_path, method: :delete, :class => 'navbar-link'
			-else
				= link_to "Sign up", new_admin_registration_path, :class => 'navbar-link'
				= link_to "Login", new_admin_session_path, :class => 'navbar-link'	
			
		/= link_to 'Manage Routes', {:controller => 'route', :action => 'showAll'}
		/= link_to 'Manage Bus Stops', {:controller => 'busstop', :action => 'showAll'}
		%a.close{:href => "#", :data => {:dismiss=>"alert"}, :aria => {:hidden => "true"}} &times;
		= yield
		
		
		/ Footer Implementation
		%div#real_footer
			%div.copyright
				%span Copyright Â© PakTransit.pk
