%h1 List of all Bus-Stops
= link_to 'Add new bus stop', busstop_new_path, :class => "btn btn-primary"
- if @busstops.blank?
	%p No bus stop currently exist.
-else
	%p.text-center 
		These are the list of bus stops
	%br
	%table.table.table-hover.table-condensed.text-center
		%tr
			%th.text-center
				Bus Stop Name
				Options
		- @busstops.each do |c|
			%tr
				%td
					= c.busStopName
				%td
					= link_to busstop_view_path(c.id) do
						= content_tag :button, :class => "btn btn-primary" do
							= content_tag :span, class: "glyphicon glyphicon-list" do
								=""
					|
					= link_to busstop_show_edit_path(c.id) do
						= content_tag :button, :class => "btn btn-warning" do	
							= content_tag :span, class: "glyphicon glyphicon-pencil" do
								=""
					|
					= link_to busstop_delete_path(c.id), method: :delete, data: { :confirm => 'Are you sure?' } do
						= content_tag :button, :class => "btn btn-danger" do
							= content_tag :span, class: "glyphicon glyphicon-remove" do
								=""